<body>
    <h1>Counter</h1>
    <div id="Container">
        <div id="number">0</div>
        <button onclick="increament()" id="add" >+</button>
        <button onclick="decreament()" id="substract" >-</button>
    </div>

    <script>
       var counter=0;

       function increament(){
        counter =counter+1;
        document.getElementById("number").innerText = counter;
       }

       function decreament(){
        counter =counter-1;
        document.getElementById("number").innerText = counter;
       }

    </script>
    </script>
</body>

